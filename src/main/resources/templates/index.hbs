{{#partial "content"}}

<h1>Post list!</h1>

   {{#if posts}}
       {{#each posts }} <!--loop-->
        <p>Pickles post:</p>
        <p>{{ content }}</p> <!--show-->
       {{/each}}
   {{else}} <!--no posts!-->
    <p>No posts!</p>
   {{/if}}

<p>Add a new Post:</p>

<form action="/posts/new" method="POST">
  <label for="content">Post Description</label>
  <input id="content" name="content" type="text">

  <button type="submit" class="btn btn-default">Add post</button>
</form>
<a href="/">Refresh</a>
{{/partial}}

{{> layout.hbs}}